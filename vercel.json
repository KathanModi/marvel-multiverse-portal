{
  "version": 2,
  "env": {
    "CI": "false",
    "REACT_APP_API_URL": "/api"
  },
  "build": {
    "env": {
      "REACT_APP_API_URL": "/api"
    }
  },
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/$1"
    }
  ]
}